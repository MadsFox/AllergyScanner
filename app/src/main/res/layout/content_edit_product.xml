<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditProductActivity"
    tools:showIn="@layout/activity_edit_product">

    <TextView
        android:id="@+id/product_edit_barcode_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barcode"
        style="@style/Base.TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/product_edit_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_barcode_headline"
        android:text="EAN"
        style="@style/Base.TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/product_edit_username_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Username"
        android:textColor="@android:color/black"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <TextView
        android:id="@+id/product_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/product_edit_username_headline"
        android:text="Username"
        style="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
        android:id="@+id/product_edit_image_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_barcode"
        android:text="Image"
        android:textColor="@android:color/black"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <ImageView
        android:id="@+id/product_edit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_image_headline" />
    <Button
        android:id="@+id/changeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_image_headline"
        android:layout_alignParentRight="true"
        android:text="Change Image"/>
    <TextView
        android:id="@+id/product_edit_name_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_image"
        android:text="Product Name"
        android:textColor="@android:color/black"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <EditText
        android:id="@+id/product_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_name_headline"
        android:hint="Product Name"
        android:inputType="textCapWords"
        android:imeOptions="actionNext"/>
    <TextView
        android:id="@+id/product_edit_producer_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_name"
        android:text="Producer"
        android:textColor="@android:color/black"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <EditText
        android:id="@+id/product_edit_producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_producer_headline"
        android:hint="Producer"
        android:inputType="textCapWords"
        android:imeOptions="actionDone"/>
    <TextView
        android:id="@+id/product_edit_ingredients_scroll_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_producer"
        android:text="Ingredients"
        android:textColor="@android:color/black"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <ScrollView
        android:id="@+id/product_edit_ingredients_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_ingredients_scroll_headline">
        <LinearLayout
            android:id="@+id/product_edit_ingredients"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <Button
        android:id="@+id/addIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_edit_ingredients_scroll"
        android:layout_alignParentRight="true"
        android:text="Add Ingredients"/>
    <Button
        android:id="@+id/addProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addIngredients"
        android:layout_alignParentRight="true"
        android:text="Add Product"/>
</RelativeLayout>
