<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dk.ruc.madssk.barcodedetectiontest.EANSearchActivity"
    tools:showIn="@layout/activity_ean_search">

    <TextView
        android:id="@+id/headline"
        android:text="ALLERGY SCANNER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/ean_search_username_headline"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <TextView
        android:id="@+id/ean_search_username"
        android:text="username"
        android:textSize="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ean_search_username_headline"
        android:layout_alignParentRight="true"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>
    <EditText
        android:id="@+id/searchField"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/headline"
        android:hint="@string/enter_barcode"
        android:inputType="number"
        android:imeOptions="actionSearch"/>
    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:layout_below="@+id/searchField"
        android:layout_toLeftOf="@+id/load_button"/>
    <Button
        android:id="@+id/load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        android:layout_below="@+id/searchField"
        android:layout_toLeftOf="@+id/search_button"/>
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_below="@+id/searchField"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/picture_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scan_button"/>
</RelativeLayout>
